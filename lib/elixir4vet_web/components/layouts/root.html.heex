<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="VetVision.UZ" suffix=" · Phoenix Framework">
      {assigns[:page_title]}
    </.live_title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const setTheme = (theme) => {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            document.documentElement.removeAttribute("data-theme");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };
        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || "system");
        }
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));
        
        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
  </head>
  <body class="min-h-screen">
    <!-- Top Navigation Bar -->
    <header class="navbar bg-base-100 border-b border-base-300 sticky top-0 z-50 shadow-sm px-4">
      <!-- Logo -->
      <div class="flex-none">
        <%= if @current_scope && @current_scope.user do %>
          <.link navigate={~p"/"} class="btn btn-ghost normal-case text-xl">
            VetVision.UZ
          </.link>
        <% else %>
          <div class="font-bold text-xl px-4">
            VetVision.UZ
          </div>
        <% end %>
      </div>

      <!-- Main Navigation Menu -->
      <div class="flex-none mx-2">
        <Layouts.theme_toggle />
      </div>
      <div class="flex-1 hidden md:flex justify-end">
        <ul class="menu menu-horizontal px-1">
          <!-- Public Menus -->
          <li><a href={~p"/"}><%= gettext("Home") %></a></li>
          <li>
            <details class="submenu-details">
              <summary><%= gettext("Services") %></summary>
              <ul class="p-2 bg-base-100 z-50">
                <li><a class="whitespace-nowrap"><%= gettext("Veterinary Care") %></a></li>
                <li><a class="whitespace-nowrap"><%= gettext("Animal Shelter") %></a></li>
                <li><a class="whitespace-nowrap"><%= gettext("Adoption") %></a></li>
                <li><a class="whitespace-nowrap"><%= gettext("Events") %></a></li>
              </ul>
            </details>
          </li>
          <li>
            <details class="submenu-details">
              <summary><%= gettext("Company") %></summary>
              <ul class="p-2 bg-base-100 z-50">
                <li><a><%= gettext("About us") %></a></li>
                <li><a><%= gettext("Contact") %></a></li>
                <li><a><%= gettext("Jobs") %></a></li>
              </ul>
            </details>
          </li>
<!-- NMK
          <li>
            <details class="submenu-details">
              <summary><%= gettext("Legal") %></summary>
              <ul class="p-2 bg-base-100 z-50">
                <li><a><%= gettext("Terms of use") %></a></li>
                <li><a><%= gettext("Privacy policy") %></a></li>
                <li><a><%= gettext("Cookie policy") %></a></li>
              </ul>
            </details>
          </li>
-->
          <!-- App Resources (Logged In Only) -->
          <%= if @current_scope && @current_scope.user do %>
            <%= if Map.get(@current_scope.permissions, "organizations") in ["RO", "RW"] or
                   Map.get(@current_scope.permissions, "animals") in ["RO", "RW"] or
                   Map.get(@current_scope.permissions, "events") in ["RO", "RW"] or
                   Map.get(@current_scope.permissions, "photographs") in ["RO", "RW"] do %>
              <li>
                <details class="submenu-details">
                  <summary>Resources</summary>
                  <ul class="p-2 bg-base-100 z-50">
                    <%= if Map.get(@current_scope.permissions, "organizations") in ["RO", "RW"] do %>
                      <li><a href="#organizations">Organizations</a></li>
                    <% end %>
                    <%= if Map.get(@current_scope.permissions, "animals") in ["RO", "RW"] do %>
                      <li><a href="#animals">Animals</a></li>
                    <% end %>
                    <%= if Map.get(@current_scope.permissions, "events") in ["RO", "RW"] do %>
                      <li><a href="#events">Events</a></li>
                    <% end %>
                    <%= if Map.get(@current_scope.permissions, "photographs") in ["RO", "RW"] do %>
                      <li><a href="#photographs">Photographs</a></li>
                    <% end %>
                  </ul>
                </details>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>

      <!-- Language Switcher -->
      <div class="flex-none mx-2">
        <div class="dropdown dropdown-end">
          <label tabindex="0" class="btn btn-ghost btn-sm">
            <%= case assigns[:locale] || "en" do %>
              <% "en" -> %>EN
              <% "ru" -> %>RU
              <% "uz" -> %>UZ
              <% _ -> %>Language
            <% end %>
          </label>
          <ul tabindex="0" class="dropdown-content menu menu-compact p-2 shadow-lg bg-base-100 rounded-box w-32 mt-3 border border-base-300">
            <li>
              <a href="#" onclick="window.location.href = window.location.pathname + '?locale=en'; return false;" class={if assigns[:locale] == "en", do: "active"}>
                English
              </a>
            </li>
            <li>
              <a href="#" onclick="window.location.href = window.location.pathname + '?locale=ru'; return false;" class={if assigns[:locale] == "ru", do: "active"}>
                Русский
              </a>
            </li>
            <li>
              <a href="#" onclick="window.location.href = window.location.pathname + '?locale=uz'; return false;" class={if assigns[:locale] == "uz", do: "active"}>
                O'zbekcha
              </a>
            </li>
          </ul>
        </div>
      </div>

      <!-- Auth Section -->
      <div class="flex-none">
        <%= if @current_scope && @current_scope.user do %>
          <!-- Logged In: User Info + Menu -->
          <div class="flex items-center gap-3">
            <!-- User Info Display -->
            <div class="hidden md:flex items-center gap-2">
              <div class="font-semibold text-sm"><%= @current_scope.user.email |> String.split("@") |> List.first() |> String.slice(0, 3) |> String.upcase() %></div>
              <%= if @current_scope.user.role == "admin" do %>
                <span class="badge badge-sm badge-success">Admin</span>
              <% else %>
                <span class="badge badge-sm badge-ghost">User</span>
              <% end %>
            </div>

            <!-- User Menu -->
            <div class="dropdown dropdown-end">
              <label tabindex="0" class="btn btn-ghost btn-sm">
                Menu
              </label>
              <ul tabindex="0" class="dropdown-content menu menu-compact p-2 shadow-lg bg-base-100 rounded-box w-52 mt-3 border border-base-300">
                <%= if @current_scope.user.role == "admin" do %>
                  <li>
                    <details>
                      <summary class="text-warning font-semibold">Admin</summary>
                      <ul>
                        <li><.link navigate={~p"/admin/users"}>Users Management</.link></li>
                        <li><.link navigate={~p"/admin/permissions"}>Permissions</.link></li>
                      </ul>
                    </details>
                  </li>
                <% end %>
                <li><.link navigate={~p"/users/settings"}>Settings</.link></li>
                <li><.link href={~p"/users/log-out"} method="delete" class="text-error">Log out</.link></li>
              </ul>
            </div>
          </div>
        <% else %>
          <!-- Logged Out: Auth Buttons -->
          <div class="flex items-center gap-2">
            <.link navigate={~p"/users/register"} class="btn btn-ghost btn-sm">
              Register
            </.link>
            <.link navigate={~p"/login"} class="btn btn-primary btn-sm">
              Log in
            </.link>
          </div>
        <% end %>
      </div>
    </header>

    <!-- Main Content -->
    <main>
      <.flash_group flash={@flash} />
      {@inner_content}
    </main>

    <footer class="footer px-10 py-4 border-t bg-base-200 text-base-content border-base-300 flex justify-between items-center">
      <div class="items-center grid-flow-col">
        <p><%= gettext("© 2026 VetVision.UZ. All rights reserved.") %></p>
      </div>
      <div class="grid grid-flow-col gap-4">
        <a>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current">
            <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"></path>
          </svg>
        </a>
        <a>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current">
            <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"></path>
          </svg>
        </a>
        <a>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current">
            <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"></path>
          </svg>
        </a>
      </div>
    </footer>
  </body>
</html>
