<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="Elixir4photos" suffix=" · Phoenix Framework">
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const setTheme = (theme) => {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            document.documentElement.removeAttribute("data-theme");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };
        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || "system");
        }
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));
        
        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
  </head>
  <body class="min-h-screen">
    <!-- Top Navigation Bar -->
    <header class="navbar bg-base-100 border-b border-base-300 sticky top-0 z-50 shadow-sm px-4">
      <!-- Logo -->
      <div class="flex-none">
        <%= if @current_scope && @current_scope.user do %>
          <.link navigate={~p"/home"} class="btn btn-ghost normal-case text-xl">
            Elixir4photos
          </.link>
        <% else %>
          <div class="font-bold text-xl px-4">
            Elixir4photos
          </div>
        <% end %>
      </div>

      <!-- Main Navigation Menu -->
      <%= if @current_scope && @current_scope.user do %>
        <div class="flex-1">
          <ul class="menu menu-horizontal px-1">
            <%= if Map.get(@current_scope.permissions, "organizations") in ["RO", "RW"] do %>
              <li><a href="#organizations" class="btn btn-ghost btn-sm">Organizations</a></li>
            <% end %>
            <%= if Map.get(@current_scope.permissions, "animals") in ["RO", "RW"] do %>
              <li><a href="#animals" class="btn btn-ghost btn-sm">Animals</a></li>
            <% end %>
            <%= if Map.get(@current_scope.permissions, "events") in ["RO", "RW"] do %>
              <li><a href="#events" class="btn btn-ghost btn-sm">Events</a></li>
            <% end %>
            <%= if Map.get(@current_scope.permissions, "photographs") in ["RO", "RW"] do %>
              <li><a href="#photographs" class="btn btn-ghost btn-sm">Photographs</a></li>
            <% end %>
          </ul>
        </div>
      <% else %>
        <div class="flex-1"></div>
      <% end %>

      <!-- Language Switcher -->
      <div class="flex-none mx-2">
        <div class="dropdown dropdown-end">
          <label tabindex="0" class="btn btn-ghost btn-sm">
            <%= case assigns[:locale] || "en" do %>
              <% "en" -> %>EN
              <% "ru" -> %>RU
              <% "uz" -> %>UZ
              <% _ -> %>Language
            <% end %>
          </label>
          <ul tabindex="0" class="dropdown-content menu menu-compact p-2 shadow-lg bg-base-100 rounded-box w-32 mt-3 border border-base-300">
            <li>
              <a href={"?locale=en"} class={if assigns[:locale] == "en", do: "active"}>
                English
              </a>
            </li>
            <li>
              <a href={"?locale=ru"} class={if assigns[:locale] == "ru", do: "active"}>
                Русский
              </a>
            </li>
            <li>
              <a href={"?locale=uz"} class={if assigns[:locale] == "uz", do: "active"}>
                O'zbekcha
              </a>
            </li>
          </ul>
        </div>
      </div>

      <!-- Auth Section -->
      <div class="flex-none">
        <%= if @current_scope && @current_scope.user do %>
          <!-- Logged In: User Info + Menu -->
          <div class="flex items-center gap-3">
            <!-- User Info Display -->
            <div class="hidden md:flex items-center gap-2">
              <div class="font-semibold text-sm"><%= @current_scope.user.email |> String.split("@") |> List.first() |> String.slice(0, 3) |> String.upcase() %></div>
              <%= if @current_scope.user.role == "admin" do %>
                <span class="badge badge-sm badge-success">Admin</span>
              <% else %>
                <span class="badge badge-sm badge-ghost">User</span>
              <% end %>
            </div>

            <!-- User Menu -->
            <div class="dropdown dropdown-end">
              <label tabindex="0" class="btn btn-ghost btn-sm">
                Menu
              </label>
              <ul tabindex="0" class="dropdown-content menu menu-compact p-2 shadow-lg bg-base-100 rounded-box w-52 mt-3 border border-base-300">
                <%= if @current_scope.user.role == "admin" do %>
                  <li><.link navigate={~p"/admin/users"} class="text-warning font-semibold">Admin Panel</.link></li>
                <% end %>
                <li><.link navigate={~p"/users/settings"}>Settings</.link></li>
                <li><.link href={~p"/users/log-out"} method="delete" class="text-error">Log out</.link></li>
              </ul>
            </div>
          </div>
        <% else %>
          <!-- Logged Out: Auth Buttons -->
          <div class="flex items-center gap-2">
            <.link navigate={~p"/users/register"} class="btn btn-ghost btn-sm">
              Register
            </.link>
            <.link navigate={~p"/"} class="btn btn-primary btn-sm">
              Log in
            </.link>
          </div>
        <% end %>
      </div>
    </header>

    <!-- Main Content -->
    <main>
      {@inner_content}
    </main>
  </body>
</html>
